<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61656c">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anime"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/PedidoCOde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52"
        app:lottie_autoPlay="true"
        app:lottie_fileName="palomaverde.json"
        app:lottie_imageAssetsFolder="assets" />

    <TextView
        android:id="@+id/PedidoCOde"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/whiteColor"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/PedidoRecibido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anime" />

    <EditText
        android:id="@+id/PedidoRecibido"
        android:layout_width="259dp"
        android:layout_height="84dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="27dp"
        android:background="#3f4143"
        android:editable="false"
        android:fadeScrollbars="false"
        android:textColor="#ffff"
        app:layout_constraintBottom_toTopOf="@+id/btn_finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PedidoCOde" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btn_scan_design"
        android:text="FINALIZAR"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PedidoRecibido" />

</androidx.constraintlayout.widget.ConstraintLayout>